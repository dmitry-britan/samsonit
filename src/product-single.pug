        //- Product Media
        .product-single__media
          .product-single__photos
            a(href="").product-single__photo
              img(src="images/product-single/main.jpg", alt="")
            .product-single__thumbs
              button.product-single__thumbs-control.product-single__thumbs-control--prev.js-thumbs-slider-prev
                i.fa.fa-angle-up
              .product-single__thumbs-inner.js-thumbs-slider
                each i in [1,2,3,4,5]
                  -var isActive = (i===1)?'is--active':'';
                  a(href="images/product-single/t-"+i+".jpg", rel="gallery", class="product-single__thumbs-item "+isActive)
                    img(src="images/product-single/t-"+i+".jpg", alt="")
              button.product-single__thumbs-control.product-single__thumbs-control--next.js-thumbs-slider-next
                i.fa.fa-angle-down

    section.section.section--recommend
      .section__title Рекомендуемые товары
      .section__body
        .slider.is--reverse.slider--recommend
          .slider__controls
            button.slider__controls-prev.js-recommend-slider-prev
              i.icon.icon--prev-up
            .slider__pagination
              .slider__pagination-current
              .slider__pagination-divider /
              .slider__pagination-total
            button.slider__controls-next.js-recommend-slider-next
              i.icon.icon--next-down
          .slider__body
            .js-recommend-slider
              include pug/db/products
              each product, index in products
                .slider__item
                  include pug/parts/product

block body-end