extends pug/base

append vars
  - body.classList.push('page page--personal-data')

block content
  section.section.section--personal
    .container
      .page__header
        .page__breadcrumbs
          -var breadcrumbs = ['Главная', 'Личный кабинет'];
          include pug/parts/breadcrumbs
        h1.page__title Личный кабинет
      .page__inner
        main.page__content
          .page__body
            .personal-block
              .personal-block__header Избранные заказы
              .personal-block__body
                include pug/personal/favorites
              .personal-block__footer
                include pug/parts/pagination
        aside.page__sidebar.sidebar.is--no-padding
          //- Personal Menu
          -var linkID = 2;
          include pug/personal/menu

block body-end